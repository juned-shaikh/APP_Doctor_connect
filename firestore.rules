rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // DEVELOPMENT RULE - Remove in production
    // Allow authenticated users to read/write their own data during development
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
             (request.auth.token.email == 'admin@doctorapp.com' ||
              (exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
               get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'));
    }
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    // Users collection rules
    match /users/{userId} {
      // Allow read access if:
      // - User is admin (can read all users)
      // - User is reading their own document
      // - Authenticated user is reading an ACTIVE doctor profile (public directory)
      allow read: if isAdmin() || isOwner(userId) || 
                   (isAuthenticated() && resource != null && resource.data.role == 'doctor' && resource.data.isActive == true);
      
      // Allow write access if:
      // - User is admin (can update all users)
      // - User is creating/updating their own document
      allow write: if isAdmin() || isOwner(userId);
      
      // Allow create access for new user registration (including Google Sign-In)
      allow create: if isAuthenticated() && isOwner(userId);
    }
    
    // Appointments collection rules
    match /appointments/{appointmentId} {
      // Allow read access if:
      // - User is admin
      // - User is the patient or doctor in the appointment
      allow read: if isAdmin() || 
                     isOwner(resource.data.patientId) || 
                     isOwner(resource.data.doctorId);
      
      // Allow write access if:
      // - User is admin
      // - User is the patient or doctor in the appointment
      allow write: if isAdmin() || 
                      isOwner(resource.data.patientId) || 
                      isOwner(resource.data.doctorId);
      
      // Allow create access for authenticated users
      allow create: if isAuthenticated();
    }
    
    // Prescriptions collection rules
    match /prescriptions/{prescriptionId} {
      // Allow read access if:
      // - User is admin
      // - User is the patient or doctor in the prescription
      allow read: if isAdmin() || 
                     isOwner(resource.data.patientId) || 
                     isOwner(resource.data.doctorId);
      
      // Allow write access if:
      // - User is admin
      // - User is the doctor who created the prescription
      allow write: if isAdmin() || isOwner(resource.data.doctorId);
      
      // Allow create access for doctors and admins
      allow create: if isAuthenticated();
    }
    
    // Notifications collection rules
    match /notifications/{notificationId} {
      // Allow read access if:
      // - User is admin
      // - User is the recipient of the notification
      allow read: if isAdmin() || isOwner(resource.data.userId);
      
      // Allow write access if:
      // - User is admin
      // - User is updating their own notification (mark as read)
      allow write: if isAdmin() || isOwner(resource.data.userId);
      
      // Allow create access for authenticated users
      allow create: if isAuthenticated();
    }
    
    // Reviews collection rules
    match /reviews/{reviewId} {
      // Allow read access to all authenticated users
      allow read: if isAuthenticated();
      
      // Allow write access if:
      // - User is admin
      // - User is the patient who wrote the review
      allow write: if isAdmin() || isOwner(resource.data.patientId);
      
      // Allow create access for authenticated users
      allow create: if isAuthenticated();
    }
    
    // System settings collection (admin only)
    match /settings/{settingId} {
      allow read, write: if isAdmin();
    }
    
    // Analytics collection (admin only)
    match /analytics/{analyticsId} {
      allow read, write: if isAdmin();
    }
    
    // Schedules collection rules
    match /schedules/{doctorId} {
      // Allow read access if:
      // - User is admin
      // - User is the doctor who owns the schedule
      // - Authenticated user (patients can read doctor schedules for booking)
      allow read: if isAdmin() || isOwner(doctorId) || isAuthenticated();
      
      // Allow write access if:
      // - User is admin
      // - User is the doctor who owns the schedule
      allow write: if isAdmin() || isOwner(doctorId);
      
      // Allow create access for doctors and admins
      allow create: if isAuthenticated() && (isAdmin() || isOwner(doctorId));
    }
    
    // Allow admin to read all collections for analytics and management
    match /{document=**} {
      allow read: if isAdmin();
    }
  }
}
